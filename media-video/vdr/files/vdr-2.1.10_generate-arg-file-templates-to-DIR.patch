+++ b/vdr.c
@@ -255,6 +255,9 @@ const char *CommandLineHelp(void)
     "                           useful in conjunction with --edit)\n"
     "            --showargs[=DIR] print the arguments read from DIR and exit\n"
     "                           (default: %s)\n"
