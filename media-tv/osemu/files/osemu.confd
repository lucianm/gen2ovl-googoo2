NAME="OSEmu"
DESCRIPTION="OSEmu Server"
DAEMON="OSEmu"
DAEMONPATH="/usr/bin/${DAEMON}"
PIDFILE="/var/run/OSEmu.pid"

#check-frequency of the watchdog in seconds
CHECKTIME=15

# Usage: OSEmu -a <user>:<password> -p <port> [-b -v]
# -b enables to start as a daemon (background)
# -v enables a more verbose output (debug output)


_OSEMU_OPTS="-a oscamuser:oscampassword -p 12345 -v &>> /var/log/osemu/osemu.log"
