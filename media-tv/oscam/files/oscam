depend() {
	before vdr
}

start() {
	ebegin "Starting OSCam cardserver"
	/usr/bin/oscam -b -c /etc/oscam
	eend $?
}

stop() {
	ebegin "Stopping OSCam cardserver"
	start-stop-daemon --stop --quiet --pidfile /var/run/oscam.pid
	eend $?
}
